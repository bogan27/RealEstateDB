<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="log-path">logs</Property>
    </Properties>
    <Appenders>
        <Console name="console-log" target="SYSTEM_OUT">
            <PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"/>
        </Console>
        <RollingFile name="info-log" fileName="${log-path}/spider.log"
                     filePattern="${log-path}/spider_%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>
        <RollingFile name="error-log" fileName="${log-path}/spider_error.log"
                     filePattern="${log-path}/spider_error_%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="main.java.execute.Main" level="debug" additivity="false">
            <appender-ref ref="info-log" level="info"/>
            <appender-ref ref="error-log" level="error"/>
            <appender-ref ref="console-log" level="info"/>
        </Logger>
        <Logger name="main.java.execute.Executor" level="debug" additivity="false">
            <appender-ref ref="info-log" level="info"/>
            <appender-ref ref="error-log" level="error"/>
            <appender-ref ref="console-log" level="info"/>
        </Logger>
        <Logger name="main.java.execute.ZillowSpider" level="debug" additivity="false">
			<appender-ref ref="info-log" level="info" />
			<appender-ref ref="error-log" level="error" />
			<appender-ref ref="console-log" level="info" />
		</Logger>
		<Logger name="main.java.api_calls.GenericZillowAPICaller" level="debug" additivity="false">
			<appender-ref ref="info-log" level="info" />
			<appender-ref ref="error-log" level="error" />
			<appender-ref ref="console-log" level="info" />
		</Logger>
		<Logger name="main.java.api_calls.GenericZillowAPICaller.ZillowRequestBuilder" level="debug" additivity="false">
			<appender-ref ref="info-log" level="info" />
			<appender-ref ref="error-log" level="error" />
			<appender-ref ref="console-log" level="info" />
		</Logger>
		<Logger name="main.java.dbConnectors.MysqlWriter" level="debug" additivity="false">
			<appender-ref ref="info-log" level="info" />
			<appender-ref ref="error-log" level="error" />
			<appender-ref ref="console-log" level="info" />
		</Logger>
		<Logger name="main.java.dbConnectors.MySQLAddressHandler" level="debug" additivity="false">
			<appender-ref ref="info-log" level="info" />
			<appender-ref ref="error-log" level="error" />
			<appender-ref ref="console-log" level="debug" />
		</Logger>
		<Logger name="main.java.dbConnectors.BostonMSAValidator" level="debug" additivity="false">
			<appender-ref ref="info-log" level="info" />
			<appender-ref ref="error-log" level="error" />
			<appender-ref ref="console-log" level="info" />
		</Logger>
		<Logger name="other" level="debug" additivity="false">
			<appender-ref ref="info-log" level="info" />
			<appender-ref ref="error-log" level="error" />
			<appender-ref ref="console-log" level="info" />
		</Logger>
        <Root level="info" additivity="false">
            <appender-ref ref="info-log" level="info"/>
            <appender-ref ref="error-log" level="error"/>
            <appender-ref ref="console-log" level="info"/>
        </Root>
    </Loggers>
</Configuration>
